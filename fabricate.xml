<?xml version="1.0" encoding="UTF-8"?>
<tns:fabricate xmlns:tns="http://www.adligo.org/fabricate/xml/io" 
    xmlns:tns1="http://www.adligo.org/fabricate/xml/io/library" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >
    <tns:java Xmx="512m" Xms="128m" />
    <tns:logs>
        <tns:log class="org.adligo.fabricate.external.RepositoryDownloader" setting="true"/>
    </tns:logs>
    <tns:dependencies>
        <tns:remote_repository>http://central.maven.org/maven2</tns:remote_repository>
    </tns:dependencies>
    <tns:project_group>
    	<tns:stages>
    	    <tns:stage name="setup" class="org.adligo.fabricate.build.tasks.DefaultSetup"/>
    	    <tns:stage name="obtain" class="org.adligo.fabricate.build.tasks.GitObtainer"/>
    	    <tns:stage name="load" class="org.adligo.fabricate.build.tasks.LoadAndCleanProjects"/>
    	    <tns:stage name="maven-obtain" class="org.adligo.fabricate.build.tasks.MavenObtainer"/>
    	    <tns:stage name="jar" class="org.adligo.fabricate.build.tasks.CompileAndJar"/>
    	    <tns:stage name="test" class="org.adligo.fabricate.build.tasks.Tests4jTests"/>
    	    <tns:stage name="publish" class="org.adligo.fabricate.build.tasks.PublishToIntelligence4j"
    	        optional="true" />
    	</tns:stages>    
    	<tns:projects>
    	    <tns:scm>
    	        <git hostname="git" path="/opt/git/org/" />
    	    </tns:scm>
    	    <tns:project name="fabricate.adligo.org" version=""/>
    	    <tns:project name="tests4j.adligo.org" version=""/>
    	    <tns:project name="tests4j_4jacoco.adligo.org" version=""/>
    	    <tns:project name="tests4j_tests.adligo.org" version=""/>
    	    <tns:project name="tests4j_4gwt.adligo.org" version=""/>
    	</tns:projects>
    </tns:project_group>
</tns:fabricate>
